@model IEnumerable<ShoesSalePage.Models.ShoesModel>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/CustomBanner.css" rel="stylesheet" />
<div class="container">
    @*Carousel Bootstrap v5.2*@
    <div id="CarouselBanner" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#CarouselBanner" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#CarouselBanner" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#CarouselBanner" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner w-100" style="height:800px">
            <div class="carousel-item active">
                <img src="~/Content/Images/banner1.png" class="d-block w-100" style="height:800px" alt="firstImg">
                <div class="carousel-caption d-none d-md-block" style="color: #256D85">
                    <h5>ALWAYS ORIGINAL</h5>
                    <p>Thiết kế tinh xảo, đường nét tỉ mỉ</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/banner2.jpg" class="d-block w-100" style="height:800px" alt="secondImg">
                <div class="carousel-caption d-none d-md-block" style="color: #256D85">
                    <h5>REDEFINING FOWARD MOTION</h5>
                    <p>Tân tiến, đột phá, tương lai của chạy bộ</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/banner3.jpg" class="d-block w-100" style="height:800px" alt="ThirdImg">
                <div class="carousel-caption d-none d-md-block" style="color: #256D85">
                    <h5>COMFORT NEVER FOLLOW COMFORT LEADS</h5>
                    <p>Đã đến lúc bạn cần tận hưởng cảm giác thoải mái bên trong với đôi giày mới nhất</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#CarouselBanner" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#CarouselBanner" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div>
    <div id="content">
        <h2> If nothing goes right for you, go to Nabati.</h2>
        <p>
            Nabati designs for and with athletes of all kinds. Creators, who love to change the game. Challenge conventions. Break the rules and define new ones. Then break them again. We supply teams and individuals with athletic clothing pre-match. To stay focussed.
        </p>
    </div>
    <div id="banner">
        <div class="header">
            <h2>Giày Nabati tái hiện quá khứ đồng thời hướng tới tương lai.<br/>
                Đã đến lúc mở lối đi riêng.</h2>
        </div>
        <div class="Button">
            <a href="~/Shoes/Shop" class="btn btn-light text-center" > Tìm hiểu ngay &rarr;</a>
        </div>
    </div>
</div>
<hr />
@section NewArrival{
    <h2>HÀNG MỚI VỀ</h2>
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Where(p => p.Id > 20))
            {
                <div class="col-xl-4 col-sm-6 p-3">
                    <div class="card" style="width: 18rem;">
                        <img src="@Url.Content(item.Image)" class="card-img-top" alt="New Arrival">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Brand</p>
                            <p class="card-text fw-bold">@String.Format("{0:n0}", item.Price) VND</p>
                            <a href="~/Shoes/Shop" class="btn btn-primary">Mua ngay</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
}
@section BestOfUs{
    <h2>TỐT NHẤT CỦA CHÚNG TÔI</h2>
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Where(p => p.Id >= 1 && p.Id <= 9))
            {
                <div class="col-xl-4 col-sm-6 p-3">
                    <div class="img-thumbnail">
                        <div class="float-start">
                            <img src="@Url.Content(item.Image)" alt="Shoes_img" height="100" width="100" />
                        </div>
                        <div>
                            <p class="fw-bold">@item.Name</p>
                            <p>@item.Brand</p>
                            <p class="fw-bold">@String.Format("{0:n0}", item.Price) VND</p>
                        </div>
                        <a href="~/Shoes/Shop" class="btn btn-primary">Mua ngay</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
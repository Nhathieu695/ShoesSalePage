@model ShoesSalePage.Models.ShoesModel
@{
    ViewBag.Title = "Details";
    string status = "";
}
@if (Model.IsAvailable)
{
    status = "Còn hàng";
}   
<div class="row">
        <div class="col-xl-4 col-sm-6 p-3">
            <div class="img-thumbnail">
                <div class="float-start">
                    <img src="@Url.Content(Model.Image)" alt="Shoes_img" height="100" width="100" />
                </div>
                <div>
                    <p class="fw-bold">@Model.Name</p>
                    <p>@Model.Brand</p>
                    <p class="fw-bold">@String.Format("{0:n0}", Model.Price) VND</p>
                    Size: <p class="fw-bold">@Model.Size</p>
                    Color: <p class="fw-bold">@Model.Color</p>
                    Tình trạng:<p class="fw-bold">@status</p>
                </div>
                <a class="btn btn-primary" href="@Url.Action("Add","Cart", new {id = Model.Id})">
                    Thêm vào giỏ hàng
                </a>
            </div>
        </div>
</div>




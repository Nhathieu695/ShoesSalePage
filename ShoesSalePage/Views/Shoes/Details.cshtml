@model ShoesSalePage.Models.ShoesModel
@{
    ViewBag.Title = "Details";
}
<div class="row">
        <div class="col-xl-4 col-sm-6 p-3">
            <div class="img-thumbnail">
                <div class="float-start">
                    <img src="@Url.Content(Model.Image)" alt="Shoes_img" height="100" width="100" />
                </div>
                <div>
                    <p class="fw-bold">@Model.Name</p>
                    <p>@Model.Brand</p>
                    <p class="fw-bold">@Model.Price VND</p>
                    Size: <p class="fw-bold">@Model.Size</p>
                    Color: <p class="fw-bold">@Model.Color</p>
                </div>
                <input class="btn btn-primary" type="button" value="Thêm vào giỏ hàng" />
            </div>
        </div>
</div>




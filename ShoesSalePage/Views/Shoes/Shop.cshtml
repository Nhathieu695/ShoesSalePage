@model IEnumerable<ShoesSalePage.Models.ShoesModel>
@{
    ViewBag.Title = "Shop";
    string imgPath = "";
}
<link href="~/Content/ProductStyle.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        @foreach(var item in Model)
            {
                <div class="col-xl-4 col-sm-6 col-md-4 col-lg-3 p-3">
                    <div class="img-thumbnail">
                        <div class="float-start">
                            <img src="@Url.Content(item.Image)" alt="Shoes_img" height="100" width="100"/>
                        </div>
                        <div>
                            <p class="fw-bold">@item.Name</p>
                            <p>@item.Brand</p>
                            <p class="fw-bold">@item.Price VND</p>
                        </div>
                        <input type="button" value="Thêm vào giỏ hàng"/>
                        <input type="button" value="Xem chi tiết" />
                    </div>
                </div>
            }
    </div>
</div>
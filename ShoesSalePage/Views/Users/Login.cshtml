@model ShoesSalePage.Models.User
@{
    ViewBag.Title = "Login";
}
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" style="background-color:black" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <!-- Email input -->
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Tên tài khoản" })

                    </div>
                    <!-- Password input -->
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Remember me
                            </label>
                        </div>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-outline-primary" value="Login" />
                        </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="~/Users/Register" class="link-danger">Register</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

